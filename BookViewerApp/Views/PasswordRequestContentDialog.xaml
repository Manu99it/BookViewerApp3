<ContentDialog
    x:Class="BookViewerApp.Views.PasswordRequestContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookViewerApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="i18n:OK"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="i18n:Cancel"
    
    Title="i18n:Password Requested"
    
    x:Name="dialog"
    >

    <StackPanel>
        <TextBlock Text="Password is required." />
        <CheckBox IsChecked="{x:Bind Remember,Mode=TwoWay}" Content="Save password." />
        <PasswordBox Password="{x:Bind Password,Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
