<ContentDialog
    x:Class="BookViewerApp.PasswordRequestContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookViewerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="i18n:OK"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="i18n:Cancel"
    
    Title="i18n:Password Requested"
    
    x:Name="dialog"
    >

    <Grid>
        <PasswordBox Password="{Binding ElementName=dialog,Path=Password,Mode=TwoWay}" />
    </Grid>
</ContentDialog>
